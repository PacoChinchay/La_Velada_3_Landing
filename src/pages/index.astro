<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/pd.png" />
		<meta name="viewport" content="width=device-width" />
		<title>La velada del Año</title>
	</head>
	<body>
		<header class="relative">
			<div class="bg-white/95 flex justify-between w-full px-5 py-3 my-2 items-center">
				<h2 class="font-boxing text-2xl text-centerfont-bold">
					<span class="bg-clip-text text-transparent bg-[conic-gradient(at_bottom,_var(--tw-gradient-stops))] from-slate-700 via-slate-600 to-slate-700 inline-block leading-relaxed">la velada del año</span>
					<span class="text-yellow-300">III</span>
				</h2>
				<p class="text-xl font-bold font-boxing text-white bg-black p-2 italic text-center">SOLD OUT</p>
			</div>
			<div class="lg:absolute lg:left-1/2 lg:-translate-x-1/2 flex flex-col gap-1 justify-center items-center  mt-4 lg:mt-0 z-10">
				<img src="../../logo.webp" alt="logo de la velada del año, tercera edición" class="w-32 lg:w-48 h-auto">
				<h1 class="font-boxing text-4xl text-center text-white font-bold">
					<span class="bg-clip-text text-transparent bg-[conic-gradient(at_bottom,_var(--tw-gradient-stops))] from-indigo-200 via-gray-400 to-indigo-200 inline-block leading-relaxed">la velada del año</span>
					<span class="text-yellow-300">III</span>
				</h1>
			</div>
		</header>
		<main class="relative">
			<section id="boxers" class={`flex justify-between relative 
			[&>div>img]:absolute [&>div>img]:bottom-0 
			[&>div>img]:w-auto lg:h-screen lg:pt-24 pt-4 border-b border-white/10 h-[40vh] md:h-[65vh] 
			[&>div>img]:animate-ease-in-out 
			[&>div>img]:animate-duration-1000`}>
				<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131313] via-zinc-800 to-zinc-950"></div>
				<div class="relative w-full">
					<img class="left-0 h-full z-50 animate-fade-right" src="../../boxers/coscu.webp" alt="Coscu">
					<img class="left-[5%] h-[80%] z-40 animate-fade-right animate-delay-300" src="../../boxers/mayichi.webp" alt="Mayichi">
					<img class="left-[15%] h-[75%] z-30 animate-fade-right animate-delay-500" src="../../boxers/viruzz.webp" alt="Viruzz">
					<img class="left-[30%] h-[70%] z-20 animate-fade-right animate-delay-700" src="../../boxers/fernanfloo.webp" alt="Fernanfloo">
					<img class="left-[42%] h-[68%] z-10 animate-fade-right animate-delay-1000" src="../../boxers/la-rivers.webp" alt="La Rivers">
					<img class="left-[45%] h-[63%] z-0 animate-fade-right animate-delay-[1300ms]" src="../../boxers/papigavi.webp" alt="Papi Gavi">
				</div>
				<div class="relative w-full">
					<img class="right-0 h-full z-50 animate-fade-left" src="../../boxers/german.webp" alt="german">
					<img class="right-[5%] h-[80%] z-40 animate-fade-left animate-delay-300" src="../../boxers/amouranth.webp" alt="Amouranth">
					<img class="right-[15%] h-[75%] z-30 animate-fade-left animate-delay-500" src="../../boxers/shelao.webp" alt="Shelao">
					<img class="right-[30%] h-[70%] z-20 animate-fade-left animate-delay-700" src="../../boxers/luzu.webp" alt="Luzu">
					<img class="right-[42%] h-[66%] z-10 animate-fade-left animate-delay-1000" src="../../boxers/rivers.webp" alt="Rivers">
					<img class="right-[45%] h-[63%] z-0 animate-fade-left animate-delay-[1300ms]" src="../../boxers/ampeter.webp" alt="ampeter">
				</div>
			</section>
			<div id="info" class="lg:absolute z-50 mx-auto lg:left-1/2 lg:bottom-24 lg:-translate-x-1/2">
				<div class="flex flex-col">
					<div class="px-5 bg-white text-black pt-4 pb-2 text-center">
						<h2 class="font-boxing text-5xl">1 de JULIO</h2>
					</div>
					<div class="px-5 bg-black text-white pt-2 pb-1 text-center">
						<a class="font-boxing text-5xl hover:contrast-150 hover:scale-105 transition inline-block" href="https://twitch.tv/ibai" target="_blank" rel="noopener noreferrer"><span>twitch.tv/</span><span class="text-yellow-300">ibai</span></a>
					</div>
					<div class="px-5 bg-sky-600 text-white pt-2 pb-1 text-center">
						<a class="font-boxing text-4xl hover:contrast-150 hover:scale-105 transition inline-block" href="https://twitch.tv/ibai" target="_blank" rel="noopener noreferrer">Comprar Entradas</a>
					</div>
				</div>
			</div>
			<div class="absolute z-50 mx-auto left-1/2 -translate-x-1/2 bottom-24 flex flex-col gap-y-11 opacity-0" id="combat">
				<div class="px-5 bg-black text-white pt-4 pb-2 text-center">
					<h3 class="font-boxing-striped text-5xl">MAYICHI</h3>
				</div>
				<span class="left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing text-yellow-500 text-5xl block absolute [text-shadow:2px_2px_0px_red,4px_4px_0px_orange,6px_6px_0px_black]">
						VS
				</span>
				<div class="px-5 bg-white text-black pt-4 pb-2 text-center">
					<h3 class="font-boxing-striped text-5xl">AMOURANTH</h3>
				</div>
			</div>
		</main>
	</body>
</html>

<style is:global>
	body {
		background: #131313;
		overflow: hidden;
	}

	@font-face {
		font-family: "Boxing";
		src: url("../../fonts/boxing.otf");
		font-weight: bold;
	}
	@font-face {
		font-family: "Boxing Striped";
		src: url("../../fonts/boxing-striped.woff2");
		font-weight: bold;
	}
</style>
<script>
	const $boxers = document.querySelector("#boxers")
	const $boxersImages = $boxers.querySelectorAll("img")

	const $info = document.querySelector("#info")
	const $combat = document.querySelector("#combat")

	$boxersImages.forEach(($img) => {

		$img.addEventListener("mouseleave", ()=> {
		$boxersImages.forEach(($img) => {
			$img.setAttribute("style", "transition: all .5s ease-in-out")
		})
		$info.setAttribute("style", "opacity: 1; transition: all .3s ease-in-out")
		$combat.setAttribute("style", "opacity: 0; transition: all .3s ease-in-out; visibility: hidden")
	})

		$img.addEventListener("mouseenter", ()=> {
			const secrtionImages = $img.parentNode.children
			const position = Array.from(secrtionImages).indexOf($img)

			const [leftBoxer, rightBoxer] = 
			[
				$boxersImages[position],
				$boxersImages[position + $boxersImages.length / 2]
			]

			
			$info.setAttribute("style", "opacity: 0; transition: all .3s ease-in-out")
			$combat.setAttribute("style", "opacity: 1; transition: all .3s ease-in-out")

			const [firstBoxerName, secondBoxerName] = $combat.querySelectorAll("h3")
			firstBoxerName.innerText = leftBoxer.alt
			secondBoxerName.innerText = rightBoxer.alt

			$boxersImages.forEach(($img) => {
				$img.setAttribute("style","filter: blur(2px) grayscale(.8); transition: all .3s ease-in-out")
			})

			leftBoxer.setAttribute("style","scale: 1.05; contrast: 1.1; transition: all .3s ease-in-out")
			rightBoxer.setAttribute("style","scale: 1.05; contrast: 1.1; transition: all .3s ease-in-out")

		})
	})
</script>